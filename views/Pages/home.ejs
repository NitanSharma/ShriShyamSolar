<% layout("boilerplate.ejs") %>

<body>
    
    <div class="container-form">
        <!-- Left Side -->
        <div class="left">
            <p>Welcome to our solar installation service. Fill out the form to get a customized solar solution for your needs.</p>
        </div>
    
        <!-- Right Side (Form) -->
        <div class="right">
            <div class="form-container">
                <form>
                    <label for="name">Your Name:</label>
                    <input type="text" id="name" name="name" required>
    
                    <label for="contact">Contact Number:</label>
                    <input type="tel" id="contact" name="contact" required>
    
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>
    
                    <label for="requirement">Solar Requirement For:</label>
                    <select id="requirement" name="requirement">
                        <option value="home">Home</option>
                        <option value="business">Business</option>
                        <option value="agriculture">Agriculture</option>
                        <option value="other">Other</option>
                    </select>
    
                    <button type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
    
</body>
 
 