<% layout("boilerplate.ejs") %>
<style>
     body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
         /* Banner Section */
         .banner {
            width: 90%;
            height: 500px;
            background: url('gallerybanner.avif') center/cover no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px auto;
            color: white;
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            text-align: center;
        }
        .gallery-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .gallery-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            max-width: 1200px;
            width: 100%;
        }
        .gallery-container img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out;
        }
        .gallery-container img:hover {
            transform: scale(1.1);
        }
</style>
<body>
     <!-- Banner Section -->
     <div class="banner">
        Gallery
    </div>
    <!-- Gallery Section -->
    <div class="gallery-section">
