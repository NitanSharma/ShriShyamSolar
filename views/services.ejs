<% layout("boilerplate.ejs") %>
<style>
     /* Banner Section */
     .banner {
            width: 90%;
            height: 500px;
            background: url('/image/servicebanner.jpg') center/cover no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px auto;
            color: white;
            font-size: 3rem;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            text-align: center;
        }
        /* Full height section */
        .services-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            padding: 50px 0;
        }

        .service-card {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .service-card:hover {
            transform: translateY(-5px);
        }

        .service-card h3 {
            font-size: 1.8rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .service-card p {
            font-size: 1.2rem;
            color: #333;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #222;
        }

        @media (max-width: 768px) {
            .service-card {
                text-align: center;
            }
        }
</style>
<body>
   <!-- Banner Section -->
     <div class="banner">Our Services</div>
     <div class="container services-container">
        <div class="row w-100">
            <!-- First Row - Two Services Together -->
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Solar Panel Installation</h3>
                    <p>Hassle-free rooftop installation for residential and commercial properties.</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Maintenance</h3>
                    <p>Comprehensive maintenance packages to ensure optimal performance of your solar system.</p>
                </div>
            </div>

            <!-- Second Row - Two More Services -->
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Free Consultation</h3>
                    <p>Expert advice tailored to your specific energy needs.</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Financing Options</h3>
                    <p>Flexible EMI options to make solar energy affordable for everyone.</p>
                </div>
            </div>

            <!-- Third Row - Last Two Services -->
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Long-Lasting Warranty</h3>
                    <p>Benefit from 30 years of warranty on solar panels and 10 years on inverters.</p>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="service-card">
                    <h3>Government Subsidies</h3>
                    <p>Avail government subsidies to reduce upfront costs and make your investment even more attractive.</p>
                </div>
            </div>

            <!-- Extra Content -->
            <div class="col-12 mt-4">
                <div class="service-card text-center">
                    <h3>Why Choose Us?</h3>
                    <p>At Shri Shyam Solar, we ensure high-quality service, seamless installation, and dedicated customer support to make your solar journey smooth and rewarding.</p>
                </div>
            </div>

        </div>
    </div>
</body>